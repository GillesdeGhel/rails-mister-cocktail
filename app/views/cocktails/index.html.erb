

<div class="banner" id='home'>
  <div class="banner-content">
  <h1>Cocktails Tales</h1>
  <h2>  <form action="search">
      <input type="text" id="search" name="tag" placeholder="Find your Cocktail">
  </form></h2>
  </div>
  <div class="banner-gradient"></div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%=cocktail.name%></h2>
            <p>Very cool cocktail, the best</p>
          </div>
        <%=link_to 'Delete', cocktail_path(cocktail), class: 'btn btn-danger card-delete',
          method: :delete,
          data: { confirm: "Are you sure?" }%>
        <%=link_to '', cocktail_path(cocktail), class: 'card-link' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
